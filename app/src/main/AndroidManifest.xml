<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coruptiaucide.vavedem">

    <application
        android:name=".VaVedemApplication"
        android:allowBackup="true"
        android:icon="@drawable/img_vedem"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activities.EntryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.FirstActivity" />
        <activity
            android:name=".ui.activities.LoginActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".ui.activities.RegisterActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".ui.activities.ForgotPasswordActivity"
            android:theme="@style/LoginTheme" />
        <activity android:name=".ui.activities.HomeActivity" />
        <activity
            android:name=".ui.activities.SecondaryActivity"
            android:theme="@style/LoginTheme" />
    </application>
</manifest>